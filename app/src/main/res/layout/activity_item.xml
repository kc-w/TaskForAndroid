<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.ItemActivity">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_item"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/blue"
        app:title="事件详情"
        app:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/item1"
                        android:text="事件名称:"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item1_tv"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/item2"
                        android:text="发起人:"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item2_tv"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/item2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>


            <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/item3"
                        android:text="发起时间:"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item3_tv"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/item3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/item4"
                        android:text="预计时间:"
                        android:layout_toRightOf="@id/item3_tv"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item4_tv"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/item4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/item5"
                        android:text="执行人:"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item5_tv"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/item5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/item51"
                        android:text="协助人:"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item51_tv"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/item51"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/item6"
                        android:text="批准人:"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item6_tv"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/item6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/item7"
                        android:layout_toRightOf="@id/item6_tv"
                        android:text="批准时间:"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item7_tv"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/item7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/item8"
                        android:text="事件状态:"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item8_tv"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/item8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item9"
                    android:text="内容"
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.example.taskforandroid.View.RichEditorNew
                    android:id="@+id/richEditor"
                    android:layout_below="@id/item9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>





            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                        android:id="@+id/receive"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_style1"
                        android:text="确认收到"/>

                <Button
                    android:id="@+id/agree"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style1"
                    android:text="批准"/>


                <Button
                        android:id="@+id/noagree"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_style1"
                        android:text="不批准"/>

                <Button
                    android:id="@+id/finish"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style1"
                    android:text="确认完成"/>
                <Button
                        android:id="@+id/delete"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_style1"
                        android:text="删除"/>

                <Button
                    android:id="@+id/add_progress"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style1"
                    android:text="添加进度"/>

            </LinearLayout>





        </LinearLayout>



    </ScrollView>



    <FrameLayout
        android:id="@+id/framelayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</LinearLayout>