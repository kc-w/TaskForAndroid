<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/gray1"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/write"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="事件名称:"
                    android:id="@+id/name"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/name_tv"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:layout_toRightOf="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:background="@color/green"
                    android:id="@+id/state_tv"
                    android:textSize="14dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="发起人:"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/start_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_toRightOf="@id/start_name"
                    android:id="@+id/start_name_tv"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="发起时间:"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_toRightOf="@id/start_time"
                    android:id="@+id/start_time_tv"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_toRightOf="@id/start_time_tv"
                    android:text="预计完成时间:"
                    android:id="@+id/preset_time"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_toRightOf="@id/preset_time"
                    android:id="@+id/preset_time_tv"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </RelativeLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="批准人:"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/agree_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_toRightOf="@id/agree_name"
                    android:id="@+id/agree_name_tv"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_toRightOf="@id/agree_name_tv"
                    android:text="批准日期:"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/agree_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_toRightOf="@id/agree_time"
                    android:id="@+id/agree_time_tv"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_toRightOf="@id/agree_time_tv"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progressbar_style"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>