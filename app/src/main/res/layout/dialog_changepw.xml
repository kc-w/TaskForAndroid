<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:background="@drawable/dialog_save_style"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="密码修改"
                android:textColor="@color/blue"
                android:textSize="20dp" />

        <EditText
                android:id="@+id/dialog1_hint1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入原密码"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_margin="20dp"
                android:layout_below="@+id/tip"
                android:textSize="20dp" />
        <EditText
                android:id="@+id/dialog1_hint2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入新密码(不超过13个字符)"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_margin="20dp"
                android:layout_below="@+id/dialog1_hint1"
                android:textSize="20dp" />


        <LinearLayout
                android:id="@+id/ll_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/dialog1_button1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="确认"
                    android:textSize="17dp" />


            <Button
                    android:id="@+id/dialog1_button2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="取消"
                    android:textSize="17dp"
                    android:gravity="center"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>